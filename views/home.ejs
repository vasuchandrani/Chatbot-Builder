<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="../script-style/style.css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home Page</title>
</head>
<body class="bg-black text-white font-sans min-h-screen flex flex-col">

  <!-- Navbar -->
  <nav class="bg-gray-900 shadow p-4 flex items-center justify-between border-b border-cyan-500">
    <div class="text-xl font-bold text-cyan-400 w-1/3">Chatbot Builder</div>
    
    <div class="flex justify-center gap-x-12 w-1/3">
      <a href="/pricing" class="text-cyan-300 hover:underline">Pricing</a>
      <a href="/create" class="text-cyan-300 hover:underline">Create</a>
      <a href="/you" class="text-cyan-300 hover:underline">You</a>
    </div>

    <div class="w-1/3"></div> <!-- placeholder for future items like profile, logout -->
  </nav>

  <!-- Main Content -->
  <main class="flex-grow px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-10 text-cyan-400">Your Chatbots</h1>

    <% if (locals.chatbots && chatbots.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
        <% chatbots.forEach((bot, index) => { %>
          <div class="bg-gray-900 border border-cyan-500 rounded-lg p-4 shadow hover:shadow-cyan-500/20 transition">
            <h2 class="text-xl font-semibold text-cyan-300 mb-2"><%= bot.name %></h2>
            <p class="text-gray-400 text-sm"><%= bot.description || 'No description provided.' %></p>
            <div class="mt-4">
              <a href="/bot/<%= bot._id %>" class="text-cyan-400 hover:underline text-sm">View Bot</a>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center text-gray-400 text-lg">
        No chatbots created yet. Go to 
        <a href="/create" class="text-cyan-400 underline">Create</a> 
        to start building one!
      </p>
    <% } %>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 border-t border-cyan-500 py-4 text-center">
    <p class="text-gray-500 text-sm">&copy; <%= new Date().getFullYear() %> Chatbot Builder</p>
  </footer>

</body>
</html>