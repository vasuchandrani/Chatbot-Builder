<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pricing - Chatbot Builder</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles1.css" />
</head>
<body class="bg-black text-white font-sans">

  <!-- Navbar -->
  <nav class="bg-gray-900 shadow p-4 flex items-center border-b border-cyan-500">
    <div class="text-2xl font-bold neon-title w-1/3">Chatbot Builder</div>
    <div class="flex gap-x-16 justify-center w-1/3">
      <a href="/pricing" class="text-cyan-500 underline">Pricing</a>
      <a href="/" class="text-cyan-300 hover:underline">Create</a>
      <a href="/userBots" class="text-cyan-300 hover:underline">You</a>
    </div>
    <div class="w-1/3 text-right">
      <!-- Optional buttons -->
    </div>
  </nav>

  <!-- Pricing Section -->
  <section class="py-12 px-6 md:px-20 text-center">
    <h2 class="text-4xl font-bold mb-4 text-white">Choose Your Plan</h2>
    <p class="text-gray-300 mb-10">Flexible pricing to suit every need — from hobbyists to enterprises.</p>

    <div class="grid md:grid-cols-3 gap-10">
      <% const plans = [
        {
          name: "Basic",
          description: "Ideal for beginners and testing.",
          price: 9,
          color: "cyan",
          features: ["1 Bot", "100 Messages/month", "Basic Support"],
          buttonText: "Get Started"
        },
        {
          name: "Pro",
          description: "Perfect for startups and growing users.",
          price: 29,
          color: "purple",
          features: ["5 Bots", "1,000 Messages/month", "Priority Support"],
          buttonText: "Upgrade"
        },
        {
          name: "Enterprise",
          description: "Full control and scalability for big teams.",
          price: 99,
          color: "pink",
          features: ["Unlimited Bots", "Unlimited Messages", "24/7 Support"],
          buttonText: "Contact Us"
        }
      ]; %>

      <% plans.forEach(plan => { %>
      <div class="bg-gray-800 border border-<%= plan.color %>-400 rounded-lg p-6 hover:shadow-lg hover:shadow-<%= plan.color %>-500/20 transition">
        <h3 class="text-2xl font-semibold mb-2 text-<%= plan.color %>-300"><%= plan.name %></h3>
        <p class="text-gray-300 mb-4"><%= plan.description %></p>
        <p class="text-3xl font-bold mb-6">$<%= plan.price %><span class="text-base text-gray-400">/mo</span></p>
        <ul class="text-left text-gray-400 mb-6 space-y-2">
          <% plan.features.forEach(feature => { %>
            <li>✔ <%= feature %></li>
          <% }); %>
        </ul>
        <button class="px-4 py-2 bg-<%= plan.color %>-500 text-white rounded hover:bg-<%= plan.color %>-600 w-full">
          <%= plan.buttonText %>
        </button>
      </div>
      <% }); %>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-center py-4 border-t border-cyan-500">
    <p class="text-gray-400">&copy; <%= new Date().getFullYear() %> Chatbot Builder. All rights reserved.</p>
  </footer>

</body>
</html>